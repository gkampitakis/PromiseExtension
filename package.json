{
	"name": "@gkampitakis/promise-util",
	"version": "1.0.0",
	"description": "",
	"main": "src/index.js",
	"scripts": {
		"start": "nodemon playground.js",
		"format": "prettier --write ./src/**/*",
		"test": "jest"
	},
	"files": [
		"src/**/*",
		"!src/**/*.spec.js",
		"!src/**/*.test.js"
	],
	"author": "Georgios Kampitakis",
	"license": "ISC",
	"devDependencies": {
		"@commitlint/cli": "^8.3.5",
		"@commitlint/config-conventional": "^8.3.4",
		"husky": "^4.2.3",
		"jest": "^25.2.7",
		"node-fetch": "^2.6.0",
		"nodemon": "^2.0.2",
		"prettier": "^2.0.2",
		"pretty-quick": "^2.0.1"
	},
	"jest": {
		"verbose": true,
		"collectCoverage": true,
		"testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.js$",
		"moduleFileExtensions": [
			"js"
		],
		"collectCoverageFrom": [
			"src/**/*.js",
			"!src/**/*/index.js",
			"!src/index.js"
		],
		"coverageThreshold": {
			"global": {
				"branches": 90,
				"functions": 90,
				"lines": 90,
				"statements": 90
			}
		}
	},
	"publishConfig": {
		"registry": "https://registry.npmjs.org/"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/gkampitakis/promiseExtension.git"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged",
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	}
}
