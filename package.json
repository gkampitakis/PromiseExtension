{
  "name": "promises-extension",
  "version": "1.0.1",
  "description": "",
  "main": "lib/PromisesExtension.js",
  "types": "lib/PromisesExtension.d.ts",
  "scripts": {
    "test": "npm run clean && npm run eslint && jest",
    "build": "npm run clean && tsc",
    "format": "prettier --write ./src",
    "eslint": "eslint src/**/*.ts",
    "clean": "rimraf ./lib ./coverage",
    "prepublishOnly": "npm run build",
    "example": "ts-node-dev --respawn --transpileOnly ./playground.ts",
    "release": "semantic-release"
  },
  "files": [
    "lib/**/*"
  ],
  "author": "Georgios Kampitakis",
  "license": "ISC",
  "keywords": [
    "promises",
    "promises extension",
    "Promise map",
    "Promise prop",
    "Promise each",
    "Promise delay",
    "Promise allSettled"
  ],
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "@types/jest": "^26.0.13",
    "@types/node": "^14.6.4",
    "node-fetch": "^2.6.0",
    "eslint": "^7.8.1",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.0",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.1.1",
    "ts-jest": "^26.3.0",
    "ts-node-dev": "^1.0.0-pre.62",
    "typescript": "^4.0.2"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    },
    "verbose": true,
    "collectCoverage": true,
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/index.ts",
      "!src/**/*.d.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gkampitakis/promiseExtension.git"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
