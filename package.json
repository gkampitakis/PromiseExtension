{
	"name": "@gkampitakis/promise-util",
	"version": "1.3.0",
	"description": "",
	"main": "lib/PromiseExtension.js",
	"types": "lib/PromiseExtension.d.ts",
	"scripts": {
		"test": "npm run clean && npm run eslint && jest",
		"build": "npm run clean && tsc",
		"format": "prettier --write ./src/**/*",
		"eslint": "eslint src/**/*.ts",
		"clean": "rimraf ./lib ./coverage",
		"prepublishOnly": "npm run build",
		"dev": "ts-node-dev --respawn --transpileOnly ./playground.ts",
		"release": "semantic-release"
	},
	"files": [
		"lib/**/*"
	],
	"author": "Georgios Kampitakis",
	"license": "ISC",
	"keywords": [
		"promises",
		"promises utils",
		"Promise map",
		"Promise prop",
		"Promise each",
		"Promise delay"
	],
	"devDependencies": {
		"@commitlint/cli": "^8.3.5",
		"@commitlint/config-conventional": "^8.3.4",
		"@semantic-release/changelog": "^5.0.1",
		"@semantic-release/commit-analyzer": "^8.0.1",
		"@semantic-release/git": "^9.0.0",
		"@semantic-release/npm": "^7.0.5",
		"@semantic-release/release-notes-generator": "^9.0.1",
		"@typescript-eslint/eslint-plugin": "^2.29.0",
		"@typescript-eslint/parser": "^3.5.0",
		"@types/jest": "^25.2.1",
		"@types/node": "^14.0.6",
		"node-fetch": "^2.6.0",
		"codecov": "^3.6.5",
		"eslint": "^6.8.0",
		"eslint-config-airbnb-base": "^14.1.0",
		"eslint-plugin-import": "^2.20.2",
		"husky": "^4.2.5",
		"jest": "^25.4.0",
		"prettier": "^2.0.5",
		"pretty-quick": "^2.0.1",
		"rimraf": "^3.0.2",
		"semantic-release": "^17.0.7",
		"ts-jest": "^25.4.0",
		"ts-node-dev": "^1.0.0-pre.44",
		"typescript": "^3.8.3"
	},
	"jest": {
		"globals": {
			"ts-jest": {
				"diagnostics": false
			}
		},
		"verbose": true,
		"collectCoverage": true,
		"testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts$",
		"moduleFileExtensions": [
			"ts",
			"js"
		],
		"transform": {
			"\\.ts$": "ts-jest"
		},
		"collectCoverageFrom": [
			"src/**/*.ts",
			"!src/**/index.ts",
			"!src/**/*.d.ts"
		],
		"coverageThreshold": {
			"global": {
				"branches": 90,
				"functions": 90,
				"lines": 90,
				"statements": 90
			}
		}
	},
	"publishConfig": {
		"registry": "https://registry.npmjs.org/"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/gkampitakis/promiseExtension.git"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged && git pull",
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	}
}
