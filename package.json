{
  "name": "promises-extension",
  "version": "2.0.0",
  "description": "A module containing some useful methods for extending native Promises",
  "main": "lib/PromisesExtension.js",
  "types": "lib/PromisesExtension.d.ts",
  "scripts": {
    "test": "npm run clean && npm run eslint && jest",
    "build": "npm run clean && tsc",
    "eslint": "eslint src/**/*.ts",
    "clean": "rm -rf lib coverage",
    "prepublishOnly": "npm run build",
    "example": "ts-node-dev ./example/example.ts --respawn --transpileOnly",
    "release": "semantic-release"
  },
  "files": [
    "lib/**/*"
  ],
  "author": "Georgios Kampitakis",
  "license": "MIT",
  "keywords": [
    "promises",
    "promises extension",
    "Promise map",
    "Promise prop",
    "Promise each",
    "Promise delay",
    "Promise allSettled"
  ],
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.7",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "eslint": "^7.13.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "node-fetch": "^2.6.1",
    "semantic-release": "^17.2.2",
    "ts-jest": "^26.4.4",
    "ts-node-dev": "^1.0.0",
    "typescript": "^4.0.5"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    },
    "verbose": true,
    "collectCoverage": true,
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/index.ts",
      "!src/**/*.d.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gkampitakis/promiseExtension.git"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
